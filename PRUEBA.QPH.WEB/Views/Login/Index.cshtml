@{
    this.ViewBag.Title = "Inicio de Sesión";
    this.Layout = "_LayoutLogin";
}

<div class="login-wrap">
    <div class="login-content" style="border-radius:40px">
        <div class="login-logo">
            <a href="~/Login/">
                <img src="~/images/icon/logo.jpg" alt="logo">
            </a>
        </div>
        <div class="login-form">
            <div class="container">
                <div class="form-group">
                    <label>Usuario(Nick)</label>
                    <input class="au-input  au-input--full" type="text" id="txtNombreUsuario" name="nombreUsuario" placeholder="NICK">
                </div>
                <div class="form-group">
                    <label>Contraseña</label>
                    <input class="au-input au-input--full" type="password" id="txtContrasena" name="contraseña" placeholder="CONTRASEÑA">
                </div>

                <button class="au-btn au-btn--block au-btn--green m-b-20" onclick="Login()">Ingresar</button>
            </div>
        </div>
    </div>
</div>